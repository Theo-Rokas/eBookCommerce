
@{
    ViewBag.Title = "Bucket";
}

<div>
    <h3>Basket</h3>    

    <table id="basketDataTable" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Person Email</th>
                <th>Book Name</th>
                <th></th>
            </tr>
        </thead>
    </table>  
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#basketDataTable").DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "Basket/BasketToGrid",
                    "type": "POST",
                }
            });
        });

        function removeItemFromBasket(itemId) {   
            $.ajax({
                url: "/Basket/RemoveItemFromBasket?itemId=" + itemId,
                type: "POST",
                dataType: "json",
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",                
                success: function (result) {
                    console.log(result);

                    if (result == true) {
                        window.location = "Basket";
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            })
        }
    </script>
}
