@model eBookCommerce.Models.eBookCommerceViewModel

<div class="modal fade" id="addToBasketModal" tabindex="-1" aria-labelledby="addToBasketModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="addToBasketModalLabel">Add to basket</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to add this book to your basket?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="yesBtn">Yes</button>
            </div>
        </div>
    </div>
</div>