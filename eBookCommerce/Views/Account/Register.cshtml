@model eBookCommerce.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<section id="registerForm">
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center my-background-image">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal text-center", role = "form" }))
        {
            <h2 class="my-title">@ViewBag.Title.</h2>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label my-sub-title" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control my-text-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label my-sub-title" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control my-text-input" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label my-sub-title" })
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control my-text-input" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary mt-3 my-button" value="Register" />
                <a href='@Url.Action("Login", "Account")' class="btn btn-primary mt-3 my-button">Log in</a>
            </div>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
